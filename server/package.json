{
	"name": "story-server",
	"version": "1.0.0",
	"license": "ISC",
	"scripts": {
		"dev": "nodemon ./src/app.ts",
		"start": "node ./dist/app.js",
		"db:docker": "docker run --name postgres-story -p 5432:5432 -e POSTGRES_PASSWORD=123456 -d postgres",
		"db:create": "npx prisma migrate dev --name init",
