		"db:clear": "prisma migrate reset"
	},
	"dependencies": {
		"@prisma/client": "^4.10.1",
		"argon2": "^0.30.3",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"express-rate-limit": "^6.7.0",
		"express-validator": "^6.14.3",
		"generate-password": "^1.7.0",
		"jsonwebtoken": "^9.0.0",
		"pg": "^8.9.0",
		"ts-node-dev": "^2.0.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/express-handlebars": "^6.0.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.13.0",
		"nodemon": "^2.0.20",
		"prisma": "^4.10.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
