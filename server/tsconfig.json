{
	"compilerOptions": {
		"lib": ["ES2020"],
		"outDir": "./dist",
		"target": "ES6",
		"module": "CommonJS",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
